/ meta
%meta{:content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type"}/
%meta{'http-equiv' =>"X-UA-Compatible", :content => "IE=EmulateIE7"}
%meta{:name => "author", :content => "#{c("metadata.author")}"}/
%meta{:name => "copyright", :content => "#{c("metadata.copyright")}"}/
%meta{:name => "classification", :content => "#{c("metadata.classification")}"}/
%meta{:name => "country", :content => "#{c("metadata.country")}"}/
%meta{:name => "keywords", :content => "#{c("metadata.keywords")}"}/
%meta{:name => "description", :content => "#{c("metadata.description")}"}
%meta{:name => "robots", :content => "index follow"}
%meta{:name => "apple-mobile-web-app-capable", :content => "yes"}/
%meta{:name => "apple-touch-fullscreen", :content => "yes"}/
= yield_content :meta_head

/ stylesheets
%link{ :href => "/stylesheets/application.css", :rel => "stylesheet" }
/[if lt IE 7]
  %link{ :href => "/stylesheets/ie6.css", :rel => "stylesheet" }
= yield_content :stylesheet_head

/ javascripts
/[if lt IE 8]
  %script{ :type => "text/javascript", :src => "http://ie7-js.googlecode.com/svn/version/2.0(beta3)/IE8.js" }
- %w(jquery-1.4.2 jquery.easing-1.3 jquery.scrollTo-1.4.2 jquery.localscroll-1.2.7 jquery.form-2.4.3 jquery.system-0.1.1).each do |javascript|
  %script{ :type => "text/javascript", :src => "http://cachedcommons.org/javascripts/jquery/#{javascript}-min.js" }
%script{ :type => "text/javascript", :src => "/javascripts/scroll-settings.js" }
%script{ :type => "text/javascript", :src => "/javascripts/form-settings.js" }
%script{ :type => "text/javascript", :src => "/javascripts/jqBarGraph.js" }
%script{ :type => "text/javascript", :src => "/javascripts/installers.js" }
%script{ :type => "text/javascript", :src => "/javascripts/application.js" }
/[if IE 6]
  %script{ :type => "text/javascript", :src => "http://cachedcommons.org/javascripts/ie/DD_belatedPNG.js" }
  :javascript
    DD_belatedPNG.fix('img');
= yield_content :javascript_head

/ local business card: http://microformats.org/code/hcard/creator
%link{:rel => :profile, :href => "http://microformats.org/profile/hcard"}
/ icons
%link{:rel => "shortcut icon", :href => "#{c("icons.favicon")}", :type => "image/x-icon"}
%link{:rel => "apple-touch-icon", :href => "#{c("icons.touch_icon")}", :title => "#{c("metadata.title")}"}/
= yield_content :extra_head
